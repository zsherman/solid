{{! This is the post loop - each post will be output using this markup }}

<div class="components">
  <div class="components__container">
    {{#foreach posts}}
      <article class="components__component">
        <div class="components__component__image" style="background: linear-gradient(to bottom, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0) 59%, rgba(0, 0, 0, 0.65) 100%), url('{{image}}') no-repeat; background-size: 100%;">
          <a class="components__component__link" href="{{url}}"></a>
          <h2><a href="{{url}}">{{{title}}}</a></h2>
        </div>
        <div class="components__component__details">
          <div class="components__component__actions">
            <a href="#" class="btn btn-round btn-grey">
              <span class="icon-attachment"></span>
            </a>
          </div>
          <p>{{excerpt words="26"}}</p>
          <div class="components__component__stats">
            <span class="icon-star">
              <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" x="0px" y="0px" viewBox="0 0 100 125" enable-background="new 0 0 100 100" xml:space="preserve"><path d="M53.1,16.9L61.6,34c0.5,1,1.5,1.7,2.6,1.9L83,38.7c2.9,0.4,4,3.9,1.9,6L71.3,57.9c-0.8,0.8-1.2,2-1,3.1l3.2,18.7  c0.5,2.9-2.5,5-5.1,3.7l-16.8-8.9c-1-0.5-2.2-0.5-3.3,0l-16.8,8.9c-2.6,1.3-5.6-0.8-5.1-3.7L29.7,61c0.2-1.1-0.2-2.3-1-3.1  L15.1,44.6c-2.1-2-0.9-5.5,1.9-6l18.8-2.7c1.1-0.2,2.1-0.9,2.6-1.9l8.4-17.1C48.1,14.4,51.9,14.4,53.1,16.9z"/></svg>
            </span>
            <span class="count">577</span>
            <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
          </div>
        </div>
      </article>
    {{/foreach}}
  </div>
