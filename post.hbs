{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

{{! Everything inside the #post tags pulls data from the post }}
{{#post}}

<article class="post-wrapper">
  <section class="post-content {{post_class}}">

    <!-- Component Sections from Markdown -->
    <h1>{{title}}</h1>
    {{content}}
    <!-- / Component Sections -->

    <div class="post-content__tags post-content__section">
      <h3>Tags</h3>
      <div class="post-content__tags__wrapper">
        {{tags separator=""}}
      </div>
    </div>
    <div class="post-content__meta post-content__section">
        <h3>Meta</h3>
        <p><time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">Updated {{date format="MMMM DD, YYYY"}}</time></p>
    </div>
    <div class="post-content__share post-content__section">
        <h3>Share this component</h3>
        <p>
          <a class="icon-twitter" href="https://twitter.com/intent/tweet?text={{encode title}}&amp;url={{url absolute="true"}}"
              onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
              <span class="hidden">Twitter</span>
          </a>
          <a class="icon-facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
              onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
              <span class="hidden">Facebook</span>
          </a>
          <a class="icon-google-plus" href="https://plus.google.com/share?url={{url absolute="true"}}"
             onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
              <span class="hidden">Google+</span>
          </a>
        </p>
    </div>
  </section>

  <section class="post-example">
    <div class="post-example__demo">
      <p data-height="268" data-theme-id="0" data-slug-hash="bcqhe" data-default-tab="result" data-user="rglazebrook" data-preview="true" class='codepen'>See the Pen <a href='http://codepen.io/rglazebrook/pen/bcqhe/'>Simple Rotating Spinner</a> by Rob Glazebrook (<a href='http://codepen.io/rglazebrook'>@rglazebrook</a>) on <a href='http://codepen.io'>CodePen</a>.</p>
      <script async src="//assets.codepen.io/assets/embed/ei.js"></script>
    </div>
    <div class="post-example__snippet">

    </div>
  </section>
</article>

{{/post}}
